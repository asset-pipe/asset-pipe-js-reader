{
  "name": "@asset-pipe/js-reader",
  "version": "0.0.0-development",
  "author": {
    "name": "Trygve Lie",
    "email": "post@trygve-lie.com"
  },
  "description": "Javascript asset feed reader",
  "main": "./lib/reader.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/asset-pipe/asset-pipe-js-reader"
  },
  "keywords": [
    "assets",
    "javascript"
  ],
  "contributors": [
    {
      "name": "Trygve Lie",
      "email": "post@trygve-lie.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/asset-pipe/asset-pipe-js-reader/issues"
  },
  "license": "MIT",
  "dependencies": {
    "asset-pipe-common": "^1.0.0-beta.6",
    "boom": "^7.1.1",
    "browserify": "^15.2.0",
    "envify": "^4.1.0",
    "fs-extra": "^6.0.1",
    "joi": "^13.1.1",
    "readable-stream": "^2.3.3",
    "tempy": "^0.2.1",
    "uglify-es": "^3.3.8"
  },
  "devDependencies": {
    "@asset-pipe/sink-fs": "^1.1.2",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.1",
    "eslint-config-finn": "^3.0.0",
    "eslint-config-finn-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^22.1.1",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "semantic-release": "^15.12.4",
    "travis-deploy-once": "^5.0.1"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "lint:commit": "commitlint --from=HEAD~1",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "clearMocks": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/mock/"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/test/test-assets-reader",
      "<rootDir>/test/test-assets-unpack-feed"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
